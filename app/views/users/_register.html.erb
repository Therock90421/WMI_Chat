<%= form_for(@user, url: users_path, method: :post) do |f| %>
  <div class="modal-body mb-0">

    <div class="md-form form-sm">
      <i class="fa fa-user prefix"></i>
      <%= f.label :name, '用户名' %>
      <%= f.text_field :name %>
    </div>

    <div class="md-form form-sm">
      <i class="fa fa-envelope-square prefix"></i>
      <%= f.label :email, "邮箱"%>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="md-form form-sm">
      <i class="fa fa-lock prefix"></i>
      <%= f.label :password, "密码" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <div class="md-form form-sm">
      <i class="fa fa-lock prefix"></i>
      <%= f.label :password_confirmation, "确认密码" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <div class="text-center mt-1-half my-4">
      <%= button_tag(type: "submit", class: "btn btn-info mb-2 waves-effect waves-light") do %>
        Sign up <i class="fa fa-pencil-square-o ml-1"></i>
      <% end %>
    </div>

    <p class="text-center">
      <%= link_to root_path do %>
        返回登录界面 
      <% end %>
    </p>

  </div>
<% end %>