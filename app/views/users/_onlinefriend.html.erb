<div class="card card-cascade narrower <% if current_user.id != @userinfo.id %>mt-5<% end %>" style="background-color: rgb(0,0,0,.4);">
  <div class="view view-cascade gradient-card-header lighten-2 narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center" style="background-color: #52b57c;">
    <a href="" class="white-text mx-3">
      <% if current_user.id == @userinfo.id %>
        在线好友
      <% else %>
        共同好友
      <% end %>
  </a>
    <div>
      <% if current_user.id == @userinfo.id %>
      <a href="/chats" type="button" class="btn btn-secondary py-2 px-4">更新</a>
      <% else %>
      <a href="/articles/<%= @userinfo.id %>" type="button" class="btn btn-secondary py-2 px-4">更新</a>
      <% end %>
    </div>
  </div>

  <div class="px-3 pb-5">
    <ul class="list-group list-group-flush custom-scrollbar scrollbar-near-moon"  style="max-height: 500px; overflow-y: auto">
      <ul class="list-group">
        <% if @onlinefriends.count == 0 %>
          <p class="p-4 card-text text-center">
      <% if current_user.id == @userinfo.id %>
        当前没有在线的好友
      <% else %>
        你们没有共同的好友
      <% end %>
          </p>
        <% end %>
        <% @onlinefriends.each do |user| %>
        <li class="list-group-item">
          <div class="row">
            <div class="col-md-2">
              <a class="text-white btn-floating" href="/articles/<%= user.id %>">

        <% if user.picture? %>
          <%= image_tag user.picture.url, class: "img-sm rounded float-left" %>
        <% else %>
           <%= image_tag "user-icon.png", class: "img-sm rounded float-left" %>
        <% end %>

                <%= image_tag "user-icon.png", class: "img-sm rounded float-left" %>
              </a>
            </div>
            <div class="col-md-6 mt-2 pt-1 text-muted">
              <%= user.name %>
              <p class="card-text text-muted"><%= truncate(user.essay,lenght:20) %></p>
            </div>
            <div class="col-md-4 text-right pt-2">
              <%= form_for Chat.new, url: chats_path, method: :post do |f| %>
              <%= hidden_field_tag :users, [user.id] %>
              <%= button_tag(:class => "btn btn-sm green px-2 py-1 mt-3") do %>
              <i class="fa fa-commenting-o"></i>
              <% end %>
            <% if @userinfo.id == current_user.id %>
              <%= link_to friendship_path(user), method: :delete, class: "p-0"  do %>
              <button type="button" class="btn btn-sm red px-2 py-1 mt-3"><i class="fa fa-times"></i></button>
              <% end %>
            <% end %>
              <% end %>
            </div>
          </div>
        </li>
        <% end %>
      </ul>
    </ul>
  </div>

</div>
