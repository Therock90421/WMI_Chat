<div class="row mb-3">
  <div class="col-md-12">
    <div class="card" style="background-color:rgb(0, 139, 139, .25);">

      <ul class="nav md-pills ">
        <% current_user.chats.each do |chatroom| %>
        <li class="nav-item">
          <% if @chat.id == chatroom[:id] %>
          <%= link_to chat_path(chatroom), class: 'nav-link active' do %>
          <i class="fa fa-wechat fa-5"></i> <%= truncate(chatroom.name, length: 20) %>
          <text id="chatroom-<%= chatroom.id %>"></text>
          <% end %>
          <% else %>
          <%= link_to chat_path(chatroom), class: 'nav-link' do %>
          <i class="fa fa-wechat fa-5"></i> <%= truncate(chatroom.name, length: 20) %>
          <text id="chatroom-<%= chatroom.id %>"></text>
          <% end %>
          <% end %>
        </li>
        <% end %>
      </ul>

    </div>

  </div>
</div>