<header>
  <div id="slide-out" class="side-nav side-nav-light sn-bg-5 fixed" style="background-image:url('/img/42.png');">
    <ul class="custom-scrollbar scrollbar-near-moon">
      <li>
        <div class="card">
          <div class="view overlay p-5 m-5">
		        <p class="card-text">
              <% if current_user.picture? %>
                <%= image_tag current_user.picture.url, class: "rounded-circle img-fluid", style: "height:200px;width:200px", alt: "avatar mx-auto white" %>
              <% else %>
  	            <%= image_tag "user-icon.png", class: "rounded-circle img-fluid", style: "height:130px;width:130px", alt: "avatar mx-auto white" %>
              <% end %>
		        </p>          
            <!-- <a href="/chats"> 
              <img class="card-img-top img-responsive" src="/img/butiange (3).png" alt="Card image cap">
            </a> -->
          </div>
          <button type="button" class="btn-floating btn-action btn ml-auto mr-4 mdb-color lighten-3" data-toggle="modal" data-target="#basicExampleModal"><i class="fa fa-search-plus"></i></button>

        </div>
      </li>


      <li>
        <ul class="collapsible collapsible-accordion">
          <%= render 'chats/friendlist' %>
        </ul>
      </li>
    </ul>
    <div class="sidenav-bg mask-light"></div>
  </div>

  <nav class="navbar fixed-top navbar-toggleable-md navbar-expand-lg scrolling-navbar double-nav navbar-light" style="background-color:rgb(0, 0, 0, 0.3);">
    <div class="float-left">
      <a href="#" data-activates="slide-out" class="button-collapse"><i class="fa fa-bars"></i></a>
    </div>
    <div class="breadcrumb-dn mr-auto">
      <p><b>WMI CHAT ——你的轻量级在线聊天室</b></p>
    </div>
    <ul class="nav navbar-nav nav-flex-icons ml-auto">

      <% if current_user %>

      <li class="nav-item">
       <%#= link_to chats_path, class: "nav-link waves-effect waves-light" do %>
       <!-- <a class="nav-link waves-effect waves-light" href="#"> -->
        <!-- <i class="fa fa-comments-o"></i> <span class="clearfix d-none d-sm-inline-block">Chatroom</span> -->
        <!-- </a> fa-user-->
        <%# end %>
      </li>

      <li class="nav-item px-3">
        <%= link_to chatroom_path, class: "nav-link waves-effect waves-light" do %>
        <i class="fa fa-wechat"></i> <span class="clearfix d-none d-sm-inline-block">聊天室</span>
        <% end %>
      </li>

      <li class="nav-item px-3">
        <%= link_to chats_path, class: "nav-link waves-effect waves-light" do %>
        <i class="fa fa-user"></i> <span class="clearfix d-none d-sm-inline-block"><%= current_user.name %></span>
        <% end %>
      </li>

      <li class="nav-item px-3">
        <%= link_to sessions_logout_path, method: :delete, class: "nav-link waves-effect waves-light" do %>
        <i class="fa fa-sign-out"></i> <span class="clearfix d-none d-sm-inline-block">退出账号</span>
        <% end %>
      </li>

      <% end %>

    </ul>
  </nav>
</header>
