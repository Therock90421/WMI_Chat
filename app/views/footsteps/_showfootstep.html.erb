<div class="card card-cascade narrower mt-5" id="footstepshowpanel" style="background-color: rgb(0,0,0,.4);">
  <div class="view view-cascade gradient-card-header narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center" style="background-color: rgb(47, 79, 79);">
    <a href="" class="white-text mx-3">Ta的留言板</a>
    <div>
      <% if @userinfo.id == current_user.id %>
      <a href="/chats/#footstepshowpanel" class="btn btn-secondary py-2 px-4" type="button">更新</a>
      <% else %>
      <a href="/articles/<%= @userinfo.id %>/#footstepshowpanel" class="btn btn-secondary py-2 px-4" type="button">更新</a>
      <% end %>
    </div>
  </div>

  <div class="p-4 pb-5">
    <% if @footstepall.count == 0 %>
      <p class="px-4 card-text text-center text-muted">
        快来第一个给Ta留言吧
      </p>
    <% end %>
    <% @footstepall.each do |footstep| %>
      <hr class="my-0">
      <div class="card-body">
        <div class="row">
          <div class="col-md-2">
            <a href="/articles/<%= footstep.footstepuser.id %>">

        <% if footstep.footstepuser.picture? %>
          <%= image_tag footstep.footstepuser.picture.url, class: "img-sm" %>
        <% else %>
           <%= image_tag "user-icon.png", class: "img-sm" %>
        <% end %>

            </a>
          </div>
          <div class="col-md-8 pl-0">
            <h5 class="card-title text-muted">
              <%= footstep.footstepuser.name %>
            </h5>
              <%= %>
            <p class="card-text">
              于<%= footstep.created_at.to_s %>&nbsp;&nbsp;给Ta留言道:
            </p>
          </div>
        </div>
        <p class="card-text mt-2">
          <%= footstep.content %>
        </p>
      </div>
    <% end %>
  </div>

</div>
